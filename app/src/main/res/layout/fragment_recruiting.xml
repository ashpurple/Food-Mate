<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFECE3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="236dp">

        <TextView
            android:id="@+id/text_recruiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="53dp"
            android:text="Food Mate"
            android:textColor="@color/main_orange"
            android:textSize="60dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="304dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="11dp"
            android:text="같이 나눠먹어요!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/foodLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/foodLine1"
            android:layout_width="match_parent"
            android:layout_height="156dp">

            <ImageButton
                android:id="@+id/btn_korean"
                android:layout_width="82dp"
                android:layout_height="81dp"
                android:layout_marginRight="34dp"
                android:layout_marginBottom="48dp"
                android:layout_toLeftOf="@id/btn_schoolfood"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/food1_korean"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.173"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txt_food1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_korean"
                android:layout_alignParentStart="true"
                android:layout_marginStart="65dp"
                android:layout_marginBottom="16dp"
                android:text="한식"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.023"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/btn_schoolfood"
                android:layout_width="70dp"
                android:layout_height="77dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="48dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/food2_schoolfood"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txt_food2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_schoolfood"
                android:layout_alignParentStart="true"
                android:layout_marginStart="151dp"
                android:layout_marginBottom="16dp"
                android:text="분식"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.138"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/btn_Asian_European_food"
                android:layout_width="124dp"
                android:layout_height="109dp"
                android:layout_marginLeft="49dp"
                android:layout_marginBottom="28dp"
                android:layout_toRightOf="@id/btn_schoolfood"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/asian_food2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.955"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txt_food3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/txt_food2"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/txt_food2"
                android:text="아시안/양식"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.89"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/foodLine2"
            android:layout_width="match_parent"
            android:layout_height="145dp">

            <ImageButton
                android:id="@+id/btn_fastfood"
                android:layout_width="74dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="56dp"
                android:layout_toLeftOf="@id/blank"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/food4_fastfood"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.459"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txt_food4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_chinese"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="28dp"
                android:layout_toLeftOf="@id/blank"
                android:text="햄버거/치킨"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/blank"
                android:layout_width="66dp"
                android:layout_height="84dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.801"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/btn_chinese"
                android:layout_width="98dp"
                android:layout_height="90dp"
                android:layout_alignBottom="@id/btn_fastfood"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="48dp"
                android:layout_toRightOf="@id/blank"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/food5_chinesefood"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.092"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txt_food5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_chinese"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="28dp"
                android:layout_toRightOf="@id/blank"
                android:text="중식"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.152"
                app:layout_constraintStart_toStartOf="parent" />


            <ImageButton
                android:id="@+id/btn_Etc"
                android:layout_width="104dp"
                android:layout_height="98dp"
                android:layout_alignBottom="@id/btn_fastfood"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="28dp"
                android:layout_toRightOf="@id/blank"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/etc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.898"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/Etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="28dp"
                android:layout_toRightOf="@id/blank"
                android:text="기타"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.805"
                app:layout_constraintStart_toStartOf="parent"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_addNew"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="56dp"
            android:layout_marginRight="30dp"
            android:adjustViewBounds="true"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/add" />

    </RelativeLayout>
</LinearLayout>