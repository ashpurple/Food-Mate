<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/foodLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/foodLine1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgBtn_food1"
                android:layout_width="64dp"
                android:layout_height="80dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight ="34dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:layout_toLeftOf="@id/imgBtn_food2"
                android:scaleType="fitCenter"
                android:src="@drawable/food1_korean" />

            <ImageButton
                android:id="@+id/imgBtn_food2"
                android:layout_width="64dp"
                android:layout_height="80dp"
                android:layout_margin="7dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                android:src="@drawable/food2_schoolfood" />

            <ImageButton
                android:id="@+id/imgBtn_food3"
                android:layout_width="64dp"
                android:layout_height="80dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="34dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:layout_toRightOf="@id/imgBtn_food2"
                android:scaleType="fitCenter"
                android:src="@drawable/food3_chicken"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/foodLine2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgBtn_food4"
                android:layout_width="64dp"
                android:layout_height="80dp"
                android:layout_margin="7dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:layout_toLeftOf="@id/blank"
                android:scaleType="fitCenter"
                android:src="@drawable/food4_fastfood" />

            <ImageView
                android:id="@+id/blank"
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"/>
            <ImageButton
                android:id="@+id/imgBtn_food5"
                android:layout_width="64dp"
                android:layout_height="80dp"
                android:layout_margin="7dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:layout_toRightOf="@id/blank"
                android:scaleType="fitCenter"
                android:src="@drawable/food5_pasta" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>